<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To-Do-App"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="20dp">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/note"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30px"
                android:layout_height="25dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:text="Create Task Quickly and Easily"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="250dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:text="Create Task Quickly and Easily."
                android:textColor="@color/fontcolor"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/clock"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30px"
                android:layout_height="25dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:text="Task Reminders"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="250dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:text="Set reminder and never miss important things."
                android:textColor="@color/fontcolor"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/calnder"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30px"
                android:layout_height="25dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:text="Set the date your task"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="250dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="40dp"
                android:text="Choose date your tasks more easily."
                android:textColor="@color/fontcolor"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:backgroundTint="@color/light_blue"
            android:text="CONTINUE"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="261dp"
            android:layout_height="182dp"
            android:layout_marginStart="75dp"
            android:src="@drawable/undraw" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>